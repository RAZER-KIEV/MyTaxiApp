<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:focusableInTouchMode="true"
    android:background="@drawable/marville_1_taxi_driver">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Taxist Online"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textSize="30dp"
        android:textColor="#010101"
        android:background="#42fff400"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/LogInBTN"
        android:background="#383a36"
        android:textColor="#ffffff"
        android:padding="40dp"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginET"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#e4bafff8"
        android:padding="15dp"
        android:layout_alignLeft="@+id/info"
        android:layout_alignStart="@+id/info"
        android:layout_alignRight="@+id/LogInBTN"
        android:layout_alignEnd="@+id/LogInBTN"
        android:textSize="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEt"
        android:autoText="true"
        android:textColor="#ff090eff"
        android:password="false"
        android:background="#ecbafff8"
        android:padding="15dp"
        android:layout_above="@+id/LogInBTN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LOGIN"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/loginET"
        android:layout_toLeftOf="@+id/loginET"
        android:background="#b1fff204"
        android:layout_alignTop="@+id/loginET"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PASS"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/passwordEt"
        android:layout_toLeftOf="@+id/passwordEt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#b1fff204"
        android:padding="3dp"
        android:layout_alignTop="@+id/passwordEt"
        android:textSize="38dp"
        android:textColor="#010101"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/info"
        android:layout_below="@+id/LogInBTN"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
